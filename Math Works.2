import java.util.ArrayList;

public class payBills {
 public static double remainder;
 public static void pay(ArrayList<MakeBill> makeBill,double payment) {
  double finalTotal = 0;
  double percent = 0;
  remainder = payment;
  for(int i = 0; i<makeBill.size(); i++) {
   finalTotal +=makeBill.get(i).getBillTotal();
  }
  for(int i=0; i<makeBill.size(); i++) {
   percent = makeBill.get(i).getBillTotal() / finalTotal;
   makeBill.get(i).setAmountPaid(percent*payment);
   
   if(makeBill.get(i).getBillTotal() < makeBill.get(i).getAmountPaid()) {
    makeBill.get(i).setAmountPaid(makeBill.get(i).getBillTotal());
   }
   remainder -= makeBill.get(i).getAmountPaid();
  }
 }

}
